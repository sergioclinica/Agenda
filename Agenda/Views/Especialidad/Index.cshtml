@model IEnumerable<Agenda.Models.Especialidad>

<p>
    <a asp-action="Create">Create</a>
</p>

<table>
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Descripcion) </th>
        </tr>
    </thead>
    <tbody>
        @* Aquí colocaremos los datos a mostrar **@
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.Descripcion) </td>
                <td> <a asp-action="Edit" asp-route-id="@item.IdEspecialidad">Editar</a> </td>
                <td> <a asp-action="Delete" asp-route-id="@item.IdEspecialidad">Eliminar</a> </td>
            </tr>
        }
    </tbody>
</table>

