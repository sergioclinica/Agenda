@model Agenda.Models.Especialidad

<h3>¿Esta seguro de eliniar el siguiente registro?</h3>

<div>
    <h5>Médico</h5>
    <hr />

    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable blue darken-1">
                <div class="card-content white-text">
                    <dl>
                        <dt>
                            <b>@Html.DisplayNameFor(modelo => modelo.Descripcion): </b>
                            @Html.DisplayFor(modelo => modelo.Descripcion)
                        </dt>
                    </dl>
                </div>
                <div class="card-action blue-grey darken-2">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdEspecialidad" />
                        <input type="submit" value="Eliminar" class="waves-effect waves-light btn-small orange lighten-2" />
                        <a asp-action="Index" class="right">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
