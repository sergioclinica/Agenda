@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-image center orange white-text">
                <i class="material-icons large">star_rate</i>
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Especialidad" asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Especialidades:</span>
                <p>Aqí va una descripción de la especialidad en cuestion, o de la funcinalidad de la opción</p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Especialidad" asp-action="Index">Ver más</a>
            </div>
        </div>
    </div>
</div>